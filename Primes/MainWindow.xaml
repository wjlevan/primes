<Window x:Class="Primes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Primes"
        mc:Ignorable="d"
        Title="Prime Number Finder" Height="450" Width="310" >
    <Grid>
        <TextBlock x:Name="InstructionsBox" HorizontalAlignment="Left" Margin="34,24,0,0" TextWrapping="Wrap" Text="Find All Prime Numbers Less Than Or Equal To: " VerticalAlignment="Top" Width="296"/>
        <TextBox x:Name="InputBox"  HorizontalAlignment="Left" Margin="34,45,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="242" PreviewTextInput="TextBox_BeforeTextInput"/>
        <Button x:Name="StartButton" Content="Start" HorizontalAlignment="Left" Margin="73,77,0,0" VerticalAlignment="Top" Click="StartButton_OnClick"/>
        <Button x:Name="ToggleButton" Content="Toggle Color" HorizontalAlignment="Left" Margin="155,77,0,0" VerticalAlignment="Top" Click="ToggleButton_OnClick"/>
        <TextBox x:Name="OutputBox" HorizontalAlignment="Left" Margin="34,111,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="242" Height="244" IsReadOnly="True" TextChanged="OutputBox_OnTextChanged"/>

    </Grid>
</Window>
